<h1> Dashboard - Post </h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Created at</th>
      <th scope="col">Author</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td> <%= post.title %> </td>
        <td> <%= truncate_content(post.content) %> </td>
        <td> <%= l(post.created_at, format: :short) %> </td>
        <td> <%= post.created_by %> </td>
        <td>
          <%= link_to "Edit", edit_admins_post_path(post) %>        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
