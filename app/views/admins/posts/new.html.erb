<h1> New Post </h1>

<%= form_with model: @post, url: admins_posts_path do |f| %>
  
  <% if @post.errors.any? %>
    <%= render 'shared/form_errors', resource: @post %>
  <% end %>

  <%= f.label :title, "Title:" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content, "Content:" %>
  <%= f.text_area :content %>
  <br>
  <%= f.submit "Create" %>
<% end %>
