<h1> New Post </h1>

<%= form_with model: @post, url: admins_posts_path do |f| %>
  
  <% if @post.errors.any? %>
    <%= render 'shared/form_errors', resource: @post %>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Title:", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :content, "Content:", class: "form-label" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <%= f.submit "Publish", class: "btn btn-primary" %>
<% end %>
