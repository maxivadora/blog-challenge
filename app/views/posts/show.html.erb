<div>
  <h3> <%= @post.title %> </h3>
  <p> <%= @post.content %> </p>
</div>
<h5> Comments: </h5>
<div>
  <% @post.comments.each do |comment| %>
    <ul>
      <li> <%= "#{comment.text} - #{comment.email}" %> </li>
    </ul>
  <% end %>
</div>
<hr>
<div>
  <%= form_with model: Comment.new, url: post_comments_path(@post) do |f| %>
    <% if defined?(@comment) && @comment.errors.any? %>
      <%= render 'shared/form_error', resource: @comment %>
    <% end %>

    <%= f.label :text, "Text:" %>
    <%= f.text_field :text %>
    <br>
    <%= f.label :email, "Email:" %>
    <%= f.text_field :email %>
    <br>
    <%= f.submit "Comment" %>
  <% end %>
</div>

<%= link_to 'Back', posts_path %>
