<div>
  <p> Title: <%= @post.title %> </p>
  <p> Content: <%= @post.content %> </p>
</div>
<div>
  <% @post.comments.each do |comment| %>
    <ul>
      <li> <%= "#{comment.text} - #{comment.email}" %> </li>
    </ul>
  <% end %>
</div>
<hr>
<div>
  <%= form_with model: Comment.new, url: post_comments_path(@post) do |f| %>
    <% if defined?(@comment) && @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>
     
        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :text, "Text:" %>
    <%= f.text_field :text %>

    <%= f.label :email, "Email:" %>
    <%= f.text_area :email %>

    <%= f.submit "Comment" %>
  <% end %>
</div>
<%= link_to 'Back', posts_path %>
