<div class="row p-2">
  <div class="d-flex flex-start">
    <img class="rounded-circle shadow-1-strong me-3" src="https://via.placeholder.com/70" alt="avatar" width="65" height="65" />
    <div class="flex-grow-1 flex-shrink-1">
      <div>
        <div class="d-flex justify-content-between align-items-center">
          <p class="mb-1">
            <%= comment.email %> <span class="small">- <%= time_ago_in_words(comment.created_at) %> </span>
          </p>
        </div>
        <p class="small mb-0">
          <%= comment.text %>
        </p>
      </div>
    </div>
  </div>
</div>
